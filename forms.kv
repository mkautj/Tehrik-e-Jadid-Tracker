# forms.kv
<FormIInputScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            hint_text: "Financial Year"
            id: financial_year
        TextInput:
            hint_text: "Month"
            id: month
        TextInput:
            hint_text: "Book No."
            id: book_no
        TextInput:
            hint_text: "Total Promises"
            id: total_promises
        TextInput:
            hint_text: "Amount Paid"
            id: amount_paid
        TextInput:
            hint_text: "Balance"
            id: balance
        TextInput:
            hint_text: "Receipt No."
            id: receipt_no
        TextInput:
            hint_text: "Son of"
            id: son_of
        TextInput:
            hint_text: "Qiadat Secretary"
            id: qiadat_secretary
        Button:
            text: "Submit"
            on_press: root.save_to_local()